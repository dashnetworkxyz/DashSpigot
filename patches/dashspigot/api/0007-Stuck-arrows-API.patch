+package xyz.dashnetwork.dashspigot.event.entity;
+
+import org.bukkit.entity.LivingEntity;
+import org.bukkit.event.Cancellable;
+import org.bukkit.event.HandlerList;
+import org.bukkit.event.entity.EntityEvent;
+
+/**
+ * Called when a LivingEntity's stuck arrows is changed
+ */
+public class EntityArrowStuckEvent extends EntityEvent implements Cancellable {
+
+    private static final HandlerList handlers = new HandlerList();
+    private int arrows;
+    private boolean cancelled;
+
+    public EntityArrowStuckEvent(LivingEntity entity, int arrows) {
+        super(entity);
+        this.arrows = arrows;
+    }
+
+    @Override
+    public LivingEntity getEntity() {
+        return (LivingEntity) entity;
+    }
+
+    public int getArrowsStuck() {
+        return arrows;
+    }
+
+    public void setArrowsStuck(int arrows) {
+        this.arrows = arrows;
+    }
+
+    @Override
+    public boolean isCancelled() {
+        return cancelled;
+    }
+
+    @Override
+    public void setCancelled(boolean cancel) {
+        cancelled = cancel;
+    }
+
+    @Override
+    public HandlerList getHandlers() {
+        return handlers;
+    }
+
+    public static HandlerList getHandlerList() {
+        return handlers;
+    }
+
+}
